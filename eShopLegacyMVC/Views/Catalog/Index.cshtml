@using eShopLegacyMVC.Controllers
@model eShopLegacyMVC.ViewModel.PaginatedItemsViewModel<eShopLegacyMVC.Models.CatalogItem>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            @(await Component.InvokeAsync(nameof(CatalogStatisticsComponent)))
        </div>
        <div class="col-10">
            <div class="esh-table">
                <p class="esh-link-wrapper">
                    @Html.ActionLink("Create New", "Create", null, new { @class = "btn esh-button esh-button-primary" })
                </p>

                @await Html.PartialAsync("CatalogTable", Model.Data)

                @await Html.PartialAsync("CatalogPaging", Model)
            </div>
        </div>
    </div>
</div>